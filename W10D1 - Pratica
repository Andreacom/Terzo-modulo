CREATE DATABASE Esercizi

CREATE TABLE Store (
ID_Store INT
	IDENTITY (1,1),
Telefono VARCHAR (15) UNIQUE,
Indirizzo VARCHAR (40)
CONSTRAINT PK_Store PRIMARY KEY (ID_Store)
);

