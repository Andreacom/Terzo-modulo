CREATE TABLE Videogiochi (
Titolo VARCHAR (30),
Genere VARCHAR (30),
AnnoUscita INT,
Sviluppatore VARCHAR (50),
Costo DEC (5,2),
CONSTRAINT PK_Videogioco PRIMARY KEY (Titolo)
)

