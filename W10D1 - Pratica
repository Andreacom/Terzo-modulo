CREATE TABLE Dipendenti (
CodiceFiscale VARCHAR (20),
NomeCognome VARCHAR (50),
Indirizzo VARCHAR (40),
TitoloStudio VARCHAR (50)
CONSTRAINT PK_Dipendenti PRIMARY KEY (CodiceFiscale)
)

